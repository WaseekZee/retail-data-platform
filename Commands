# List containers (copy the kafka container name, e.g., retail-data-platform-kafka-1)
docker ps

# Create topic 'sales' with 1 partition and replication factor 1
docker exec -it <YOUR_KAFKA_CONTAINER_NAME> \
  kafka-topics --create --topic sales --partitions 1 --replication-factor 1 --bootstrap-server localhost:9092

# Verify it exists
docker exec -it <YOUR_KAFKA_CONTAINER_NAME> \
  kafka-topics --describe --topic sales --bootstrap-server localhost:9092
